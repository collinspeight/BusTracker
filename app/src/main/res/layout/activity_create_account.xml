<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.harold.bustracker.AccountActivity.CreateAccountActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="76dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/create"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email Address" />

    <EditText
        android:id="@+id/password1Text"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/emailText"
        android:layout_below="@+id/emailText"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/password2Text"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/password1Text"
        android:layout_below="@+id/password1Text"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Re-enter password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:text="Already a member? Sign in."
        android:clickable="true"/>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#f4767a"
        app:cardCornerRadius="25dp"
        android:clickable="true"
        android:layout_below="@+id/password2Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/register">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
